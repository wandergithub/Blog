<%= form_with model: post, url: create_post_path, method: :post, local: true, scope: :post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text, size: "70x5" %>
  </div>

  <%= form.submit "Create post" %>
<% end %>
<% if flash[:error] %>
  <div class="notice"><%= flash[:error] %></div>
<% end %>
<% if flash[:success] %>
  <div class="notice"><%= flash[:success] %></div>
<% end %>