<div class="post">
  <div>
    <%= @post.title %>
    by
    <%= @post.user.name %>
    Comments:
    <%= @post.CommentsCounter %>, Likes:
    <%= @post.LikesCounter %>
  </div>

  <p>
    <%= @post.text %>
  </p>

  <%= form_with url: "/users/#{@user_id}/posts/#{@id}/likes" do |form| %>
    <%= form.submit "Like post" %>
  <% end %>
</div>

<div class="comment">
  <%= render "comments/new", post: @post %>
  <% @post.comments.each do |comment| %>
    <span><%= comment.user.name %>
    :
    <%= comment.text %></span>

    <% if (can? :update, comment) %>
      can update
    <% end %>

    <% if (can? :delete, comment) %>
      can delete
    <% end %>

  <% end %>
</div>
