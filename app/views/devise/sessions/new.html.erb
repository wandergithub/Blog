<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%=
			f.email_field :email,
			placeholder: "email",
			autofocus: true,
			autocomplete: "email"
		%>
  </div>

  <div class="field">
    <%=
			f.password_field :password,
			placeholder: "password",
			autocomplete: "current-password"
		%>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
