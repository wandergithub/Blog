<%= form_with model: comment, url:user_post_comments_path, method: :post, local: true, scope: :comment do |form| %>
  <div>
  <%= form.label :text %>
  <%= form.text_field :text %>
  </div>

  <%= form.submit "Create post" %>
<% end %>
<% if flash[:error] %>
  <div class="notice"><%= flash[:error] %></div>
<% end %>